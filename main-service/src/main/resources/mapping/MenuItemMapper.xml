    <!-- 根据角色查询关系对象 -->
    <select id="getItemByRoleId" parameterType="String" resultMap="BaseResultMap">
        select
        item.item_id,
        item.item_name,
        item.menu_id,
        item.permission,
        item.item_sts,
        item.crt_id,
        item.crt_dt,
        item.crt_tm,
        item.upt_id,
        item.upt_dt,
        item.upt_tm,
        item.rmk
        from t_sys_role_item_rel rel
        inner join t_sys_menu_item item on rel.ITEM_ID=item.ITEM_ID
        <where>
            <if test="_parameter!=null and _parameter!=''">
                rel.role_id=#{0}
            </if>
        </where>
    </select>

    <!-- 根据角色ID组获取权限列表 -->
    <select id="getPermissionsByRoleIds" resultType="String">
        SELECT
        item.PERMISSION
        FROM
        t_sys_menu_item item
        INNER JOIN
        t_sys_role_item_rel rel ON rel.item_id = item.ITEM_ID
        INNER JOIN
        t_sys_role role ON role.ROLE_ID = rel.ROLE_ID
        <where>
            item.item_sts='01' and role.ROLE_ID in
            <foreach item="item" collection="array" separator="," open="("
                     close=")" index="">
                #{item}
            </foreach>
        </where>
    </select>
