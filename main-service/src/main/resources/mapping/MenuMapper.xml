    <!-- 根据角色组获取菜单 -->
    <select id="getMenusByRoles" resultType="com.xhkj.server.energy.dao.mybatis.vo.Menu">
        select DISTINCT(menu.MENU_ID) as menuId,
        menu.MENU_code as menuCode,
        menu.MENU_NAME as menuName,
        menu.menu_URL as menuUrl,
        menu.menu_PID as menuPid,
        menu.menu_ORDER as menuOrder,
        menu.icon as icon
        from t_sys_menu menu
        inner join t_sys_menu_item item on
        menu.MENU_ID=item.MENU_ID
        inner join t_sys_role_item_rel rel on
        rel.ITEM_ID=item.ITEM_ID
        <where>
            <if test="array!=null ">
                ROLE_ID in
                <foreach item="item" collection="array" separator="," open="("
                         close=")" index="">
                    #{item}
                </foreach>
            </if>
        </where>
        order by menu.MENU_ID
    </select>

    <!-- 获取全部菜单带菜单项对象 -->
    <select id="getAllWithItemListByRoleIds" resultMap="menuMap2">
        select menu.MENU_ID,
        menu.MENU_CODE,
        menu.MENU_NAME ,
        menu.MENU_URL ,
        menu.MENU_PID ,
        menu.MENU_ORDER,
        item.item_id,
        item.menu_id as item_menu_id,
        item.item_name,
        item.permission
        from t_sys_menu menu
        left join t_sys_menu_item item
        on item.menu_id=menu.menu_id
        left join t_sys_role_item_rel rel on
        rel.ITEM_ID=item.ITEM_ID
        <where>
            rel.ROLE_ID in
            <foreach item="item" collection="array" separator="," open="("
                     close=")" index="">
                #{item}
            </foreach>
            or menu.MENU_PID in('0000','1000')
        </where>
    </select>
